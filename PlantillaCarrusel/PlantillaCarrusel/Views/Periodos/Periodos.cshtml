@model PlantillaCarrusel.Models.MatriculaGenerals
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }




<!DOCTYPE html>



<html>
<head>
    <title>Mantenimiento de Periodos</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="/Content/CSS/Grados.css" rel="stylesheet" />
    <link href="/Content/CSS/Sprite.css" rel="stylesheet" />
    <link href="~/Content/CSS/Layout.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>



<body>
    <h2>Periodos</h2>
    <div class="row">
        <div class="col-md-12">
            <div id="kendoGrid">
            </div>
        </div>
    </div>



    <!-- Edit Periodos Modal -->
    <div id="dialog-containerEDT">
        <div id="dialogEDT" title="Editar los detalles del Periodo">
            <form>
                <input type="hidden" id="editPeriodoId">
                <div class="input-field">
                    <label for="editPeriodosCodigo">Código</label>
                    <input type="text" id="editPeriodosCodigo">
                </div>
                <div class="input-field">
                    <label for="editPeriodosFechaInicio">Fecha Inicio</label>
                    <input type="text" id="editPeriodosFechaInicio">
                </div>
                <div class="input-field">
                    <label for="editPeriodosFechaFin">Fecha Fin</label>
                    <input type="text" id="editPeriodosFechaFin">
                </div>
            </form>
        </div>
    </div>



    <!-- Delete Periodos Modal -->
    <div id="dialog-containerDEL">
        <div id="dialogDEL" title="Eliminar el registro de un Periodo">
            <form>
                <input type="hidden" id="DeletePeriodoId">
                <p>¿Está seguro que desea eliminar este Periodo?</p>
            </form>
        </div>
    </div>



    <!-- Insert Periodos Modal -->
    <div id="dialog-containerINS">
        <div id="dialogINS" title="Agregar un nuevo Periodos">
            <form>
                <div class="input-field">
                    <label for="insPeriodosCodigo">Código</label>
                    <input type="text" id="insPeriodosCodigo">
                </div>
                <div class="input-field">
                    <label for="insPeriodosFechaInicio">Fecha Inicio</label>
                    <input type="text" id="datepicker1">
                </div>
                <div class="input-field">
                    <label for="insPeriodosFechaFin">Fecha Fin</label>
                    <input type="text" id="datepicker2">
                </div>
            </form>
        </div>
    </div>



    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>



@section scripts{
    @Scripts.Render("~/Scripts/MantenimientosPeriodos.js")
}