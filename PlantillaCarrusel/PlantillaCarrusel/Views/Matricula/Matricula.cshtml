@model PlantillaCarrusel.Models.MatriculaGenerals
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <title>Mantenimiento de Matricula</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="/Content/CSS/Grados.css" rel="stylesheet" />
    <link href="/Content/CSS/Sprite.css" rel="stylesheet" />
    <link href="~/Content/CSS/Layout.css" rel="stylesheet" />
</head>

<body>
    <h2>Matricula</h2>
    <div class="row">
        <div class="col-md-12">
            <div id="kendoGrid">
            </div>
        </div>
    </div>

    <!-- Edit Matricula Modal -->
    <div id="dialog-containerEDT">
        <div id="dialogEDT" title="Editar los detalles de una Matricula">
            <form>
                <input type="hidden" id="editMatriculaId">
                <input type="hidden" id="editMateriaId">
                <input type="hidden" id="editAlumnoId">
                <input type="hidden" id="editPeriodoId">
                <div class="input-field">
                    <label for="id_MateriaEdit">Materia</label>
                    @Html.DropDownListFor(model => model.id_MateriaEdit,
                   new SelectList("  "), " -- Selecciona una Materia --",
                   new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="id_AlumnoEdit">Alumno</label>
                    @Html.DropDownListFor(model => model.id_AlumnoEdit,
                   new SelectList("  "), " -- Selecciona un Alumno --",
                   new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="editNota">Nota</label>
                    <input type="text" id="editNota">
                </div>
                <div class="input-field">
                    <label for="id_PeriodoEdit">Periodo</label>
                    @Html.DropDownListFor(model => model.id_PeriodoEdit,
                   new SelectList("  "), " -- Selecciona un Periodo --",
                   new { @class = "form-control", required = "required" })
                </div>

            </form>
        </div>
    </div>

    <!-- Delete Matricula Modal -->
    <div id="dialog-containerDEL">
        <div id="dialogDEL" title="Eliminar el registro de una Matricula">
            <form>
                @*<input type="hidden" id="DeleteGradoId">*@
                <input type="hidden" id="DeleteMatriculaId">
                <p>¿Está seguro que desea eliminar esta Matricula?</p>
            </form>
        </div>
    </div>

    <!-- Insert Matriucla Modal -->
    <div id="dialog-containerINS">
        <div id="dialogINS" title="Agregar una nueva matricula">
            <form>
                <div class="input-field">
                    <label for="id_MateriaIns">Materia</label>
                    @Html.DropDownListFor(model => model.id_MateriaIns,
                        new SelectList("  "), " -- Selecciona una Materia --",
                        new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="id_AlumnoIns">Alumno</label>
                    @Html.DropDownListFor(model => model.id_AlumnoIns,
                        new SelectList("  "), " -- Selecciona un Alumno --",
                        new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="InsNota">Nota</label>
                    <input type="text" id="InsNota">
                </div>
                <div class="input-field">
                    <label for="id_PeriodoIns">Periodo</label>
                    @Html.DropDownListFor(model => model.id_PeriodoIns,
                        new SelectList("  "), " -- Selecciona un Periodo --",
                        new { @class = "form-control", required = "required" })
                </div>
            </form>
        </div>
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>

@section scripts{
    @Scripts.Render("~/Scripts/MantenimientoMatriculas.js")
}