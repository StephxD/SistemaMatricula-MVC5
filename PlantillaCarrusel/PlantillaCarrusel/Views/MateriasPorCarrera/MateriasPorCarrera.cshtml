@model PlantillaCarrusel.Models.MatriculaGenerals
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>Mantenimiento de Materias por Carreras</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="/Content/CSS/Grados.css" rel="stylesheet" />
    <link href="/Content/CSS/Sprite.css" rel="stylesheet" />
    <link href="~/Content/CSS/Layout.css" rel="stylesheet" />
</head>

<body>
    <h2>Materias por Carreras</h2>
    <div class="row">
        <div class="col-md-12">
            <div id="kendoGrid">
            </div>
        </div>
    </div>

    <!-- Edit Materias por Carrera Modal -->
    <div id="dialog-containerEDT">
        <div id="dialogEDT" title="Editar los detalles de una materia por carrera">
            <form>
                @*<input type="hidden" id="editCarreraId">
                <input type="hidden" id="editGradoId">*@
                <div class="input-field">
                    <label for="id_CarreraEdit">Carrera</label>
                    @Html.DropDownListFor(model => model.id_CarreraEdit,
                   new SelectList("  "), " -- Selecciona una Carrera --",
                   new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="id_MateriaEdit">Materia</label>
                    @Html.DropDownListFor(model => model.id_MateriaEdit,
                   new SelectList("  "), " -- Selecciona una Materia --",
                   new { @class = "form-control", required = "required" })
                </div>
                
            </form>
        </div>
    </div>

    <!-- Delete Materia por Carrera Modal -->
    <div id="dialog-containerDEL">
        <div id="dialogDEL" title="Eliminar el registro de una materia por carrera">
            <form>
                @*<input type="hidden" id="DeleteCarreaId">
                <input type="hidden" id="DeleteMateriaId">*@
                <p>¿Está seguro que desea eliminar esta Materia por carrera?</p>
            </form>
        </div>
    </div>

    <!-- Insert Materia por Carrera Modal -->
    <div id="dialog-containerINS">
        <div id="dialogINS" title="Agregar una nueva  materia por carrera">
            <form>
                <div class="input-field">
                    <label for="id_CarreraIns"> Carrera</label>
                    @Html.DropDownListFor(model => model.id_CarreraIns,
                   new SelectList("  "), " -- Selecciona una Carrera --",
                   new { @class = "form-control", required = "required" })
                </div>
                <div class="input-field">
                    <label for="id_MateriaIns">Materia</label>
                    @Html.DropDownListFor(model => model.id_MateriaIns,
                   new SelectList("  "), " -- Selecciona una Materia --",
                   new { @class = "form-control", required = "required" })
                </div>
            </form>
        </div>
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>

@section scripts{
    @Scripts.Render("~/Scripts/MantenimientoMateriasPorCarrera.js")
}